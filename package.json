{
  "name": "nuwm-enrollee",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/backend",
    "packages/frontend"
  ],
  "scripts": {
    "build:be": "cd packages/backend && pnpm run build",
    "start:be": "cd packages/backend && pnpm run start",
    "dev": "turbo dev",
    "deploy:be": "fly deploy --config packages/backend/fly.toml  --dockerfile packages/backend/Dockerfile",
    "deploy:fe": "fly deploy --config packages/frontend/fly.toml  --dockerfile packages/frontend/Dockerfile",
    "lint": "bunx @biomejs/biome check .",
    "lint:fix": "bunx @biomejs/biome check --apply ."
  },
  "devDependencies": {
    "@biomejs/biome": "1.6.3",
    "@flydotio/dockerfile": "^0.5.7",
    "@skeletonlabs/skeleton": "^2.9.1",
    "@skeletonlabs/tw-plugin": "^0.4.0",
    "@types/bun": "latest",
    "turbo": "^2.0.4"
  },
  "packageManager": "pnpm@9.0.6",
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}